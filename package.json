{
  "name": "pre-shipment-system",
  "version": "1.0.0",
  "description": "Pre-Shipment Entry System - Easy Local Setup",
  "scripts": {
    "setup-backend": "cd backend && npm install && npm run db:generate",
    "setup-frontend": "cd frontend && npm install",
    "migrate": "cd backend && npm run db:migrate",
    "db:push": "cd backend && npm run db:push",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "create-admin": "cd backend && npx tsx src/scripts/createAdmin.ts"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}